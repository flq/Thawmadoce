    <Style TargetType="{x:Type Editor:MarkdownEditor}">
        <Setter Property="Background" Value="#FFFCFCFC" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="AcceptsTab" Value="True" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Editor:MarkdownEditor}">
                    <Border x:Name="Bd" CornerRadius="10" 
                            BorderBrush="Black" BorderThickness="1" 
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}" >
                        <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ShowSelectionBar, Mode=OneWay}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource MoveDownEditor}" />
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <BeginStoryboard Storyboard="{StaticResource MoveUpEditor}" />
                </DataTrigger.ExitActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="SelectionCommand"  DataType="{x:Type Extensibility:SelectionCommand}">
        <Button Style="{StaticResource Button_VisibleCommand}" Height="32">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding CommandIcon, Converter={StaticResource PathToImg}}" Margin="2" />
                <TextBlock Text="{Binding CommandText}" />
            </StackPanel>
        </Button>
    </DataTemplate>

</ResourceDictionary>